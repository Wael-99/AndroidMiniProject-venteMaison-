                    android:textSize="12sp" />


                <!--                <Button-->
                <!--                    android:id="@+id/owner_SingleProperty_edit"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:layout_marginTop="20dp"-->
                <!--                    android:text="Edit" />-->

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>